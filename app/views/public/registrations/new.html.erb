<div class="container">
  <h3 class="my-5">新規会員登録</h3>
  <div class="row mx-auto">
    <div class="col-10">
      <%= form_with model: @end_user, url: end_user_registration_path do |f| %>
        <%= render "layouts/errors", obj: @end_user %>
        <div class="form-group">
          <table class="table table-borderless">
            <tboby>
              <tr>
                <td><%= f.label :name, "ユーザー名" %></td>
                <td><%= f.text_field :name, autofocus: true, class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :email, "メールアドレス" %></td>
                <td><%= f.email_field :email, autocomplete: "email", class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :password, "パスワード(6文字以上)" %></td>
                <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
              </tr>
              <tr>
                <td></td>
                <td colspan="2"><%= f.submit "新規登録", class: "btn btn-lg btn-success" %></td>
              </tr>
            </tboby>
          </table>
        </div>
      <% end %>
    </div>
  </div>
  <h3 class="my-5">既に登録済みの方</h3>
  <div class="row mx-auto">
    <div class="col-10">
      <p><%= link_to "こちら", new_end_user_session_path %>からログインしてください。</p>
    </div>
  </div>
</div>
