<div class="container">
  <h3>タイムライン</h3>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="card">
        <%= link_to post_path(post) do %>
          <%= image_tag post.get_image, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-4">
              <%= image_tag @post.cat.get_cat_image(100,100), class: "mt-3 rounded-circle" %>
              <%= @post.cat.name %>
            </div>
            <div class="col-8">
              <p class="card-title">
                <%= link_to post_path(post) do %>
                  <%= @post.title %>
                <% end %>
              </p>
              <p>
                <%= link_to "#タグ" %>
              </p>
              <p>
                いいね
              </p>
              <span><%= @post.created_at.strftime('%Y/%m/%d') %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>