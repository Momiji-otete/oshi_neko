<div class="container">
  <h3>投稿詳細</h3>
  <div class="row">
    <div class="card">
      <%= image_tag @post.get_image(200,200), class: "card-img-top" %>
      <div class="card-body">
        <div class="row">
          <div class="col-4">
            <%= link_to cat_path(@post.cat) do %>
              <%= image_tag @post.cat.get_cat_image(80,120), class: "mt-3 rounded-circle" %>
              <%= @post.cat.name %>
            <% end %>
          </div>
          <div class="col-8">
            <p class="card-title">
              <strong><%= @post.title %></strong>
            </p>
            <p class="card-text">
              <%= @post.body %>
            </p>
            <p>
              <%= link_to "#タグ" %>
            </p>
            <div class="like-<%= @post.id %>">
              <%= render "public/likes/likes_btn", post: @post %>
            </div>
            <span><%= @post.created_at.strftime('%Y/%m/%d') %></span>
          </div>
        </div>
      </div>
    </div>
    <div>
      <% if @post.end_user == current_end_user %>
        <%= link_to "編集する", edit_post_path(@post), class: "btn btn-sm btn-success" %>
        <%= link_to "削除する", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <tbody>
        <% @post.comments.each do |comment| %>
          <tr>
            <td><%= comment.end_user.name %></td>
            <td class="border"><%= comment.comment_content %></td>
            <td>
              <% if comment.end_user == current_end_user %>
                <%= link_to "削除する", post_comment_path(@post, comment), method: :delete, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <%= form_with model: [@post, @post_comment] do |f| %>
      <%= f.text_area :comment_content, rows: "5", placeholder: "コメントする" %>
      <%= f.submit "送信する" %>
    <% end %>
  </div>
</div>