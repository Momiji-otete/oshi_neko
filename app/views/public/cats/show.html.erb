<div class="container">
  <div class="row">
    <div class="col">
      <h3>猫詳細</h3>
      <div class="row">
        <div>
          <%= image_tag @cat.get_cat_image(100,100), class: "mt-3 rounded-circle" %>
        </div>
        <table>
          <tbody>
            <tr>
              <td>名前</td>
              <td><%= @cat.name %></td>
            </tr>
            <tr>
              <td>性別</td>
              <td><%= @cat.sex_i18n %></td>
            </tr>
            <tr>
              <td>猫種</td>
              <td><%= @cat.breed %></td>
            </tr>
            <tr>
              <td>猫紹介</td>
              <td><%= @cat.introduction %></td>
            </tr>
            <tr>
              <td>ご主人様</td>
              <td>
                <%= link_to end_user_path(@cat.end_user) do %>
                  <%= @cat.end_user.name %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= link_to "編集する", edit_cat_path(@cat), class: "btn btn-sm btn-success" %>
      </div>
      <div class="row">
        <h5><%= @cat.name %>ちゃんの投稿</h5>
        <% @posts.each do |post| %>
          <div class="card w-50 mx-auto mt-4 shadow-sm">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_image(200,200), class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col-4">
                  <%= link_to cat_path(post.cat.id) do %>
                    <%= image_tag post.cat.get_cat_image(100,100), class: "mt-3 rounded-circle" %>
                    <%= post.cat.name %>
                  <% end %>
                </div>
                <div class="col-8">
                  <p class="card-title">
                    <%= link_to post_path(post.id), class: "text-dark" do %>
                      <strong><%= post.title %></strong>
                    <% end %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div>
          <%= paginate @posts, theme: 'bootstrap-5' %>
        </div>
      </div>
    </div>
  </div>
</div>