<div class="container">
  <h3>猫詳細</h3>
  <div class="row">
    
  </div>
  <div class="row">
    <h5><%= @cat.name %>ちゃんの投稿</h5>
    <% @cat.posts.each do |post| %>
      <div class="card w-50 mx-auto mt-4 shadow-sm">
        <%= link_to post_path(post.id) do %>
          <%#= image_tag post.get_image, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-4">
              <%= link_to cat_path(post.cat.id) do %>
                <%= image_tag post.cat.get_cat_image(100,100), class: "mt-3 rounded-circle" %>
                <%= post.cat.name %>
              <% end %>
            </div>
            <div class="col-8">
              <p class="card-title">
                <%= link_to post_path(post.id), class: "text-dark" do %>
                  <strong><%= post.title %></strong>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>