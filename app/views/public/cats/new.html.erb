<div class="container">
  <h3>猫登録</h3>
  <div class="row">
    <div>
      <%= form_with model: @cat do |f| %>
        <div class="form-group">
          <%= f.label :cat_image, "画像" %>
          <%= f.file_field :cat_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.radio_button :sex, Cat.sexes.key(1) %>
          <%= f.label :sex, Cat.sexes_i18n[:male] %> <!-- オス -->
          <%= f.radio_button :sex, Cat.sexes.key(2) %>
          <%= f.label :sex, Cat.sexes_i18n[:female] %> <!-- メス -->
          <%= f.radio_button :sex, Cat.sexes.key(0), checked: true %>
          <%= f.label :sex, Cat.sexes_i18n[:unanswered] %> <!-- 未回答 -->
        </div>
        <div class="form-group">
          <%= f.label :introduction, "猫紹介" %>
          <%= f.text_field :introduction %>
        </div>
        <div class="form-group">
          <%= f.submit "登録する", class: "btn btn-sm btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>