<% post.comments.each do |comment| %>
  <div class="media border mb-3">
    <div class="media-body ml-4 p-3">
      <p>
        <%= comment.created_at.strftime('%Y/%m/%d') %>
        <%= link_to end_user_path(comment.end_user) do %>
          <%= comment.end_user.name %>
        <% end %>
      </p>
      <p class="text-break"><%= comment.comment_content %></p>
      <div class="d-flex justify-content-end">
      <% if comment.end_user == current_end_user %>
        <%= link_to "削除", post_comment_path(post, comment), method: :delete, remote: true, class: "btn btn-danger" %>
      <% end %>
      </div>
    </div>
  </div>
<% end %>