<div class="container">
  <h3 class="mt-5">ユーザー編集</h3>
  <%= render "layouts/errors", obj: @end_user %>
  <div class="row justify-content-center">
    <div class="col-8 mt-5">
      <%= form_with model: @end_user, url: admin_end_user_path(@end_user) do |f| %>
        <div class="form-group">
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, class: "form-control", placeholder: "10文字以内" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, rows: '4', placeholder: "500文字以内", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :is_deleted, "ステータス" %><br>
          <%= f.radio_button :is_deleted, false, class: "ml-3" %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, true, class: "ml-3" %>
          <%= f.label :is_deleted, "退会" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新する", class: "btn btn-success float-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>