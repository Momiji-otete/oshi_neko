<div class="container">
  <div class="row">
    <div class="col">
      <h3>投稿詳細</h3>
      <div class="row">
        <%= image_tag @post.get_image(150,150) %>
        <div class="col-4">
          <%= image_tag @post.cat.get_cat_image(100,100), class: "mt-3 rounded-circle" %>
          <%= @post.cat.name %>
        </div>
        <div class="col-8">
          <p>タイトル</p>
          <h5><%= @post.title %></h5>
          <p>本文</p>
          <p><%= @post.body %></p>
          <p>
            <%= render "public/posts/tag_link", post: @post %>
          </p>
          <p><%= @post.likes.count %>いいね</p>
          <span><%= @post.created_at.strftime('%Y/%m/%d') %></span>
        </div>
      </div>
      <div class="row">
        <%= link_to "削除する", admin_post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
      </div>
      <div class="row">
        
      </div>
    </div>
  </div>
</div>