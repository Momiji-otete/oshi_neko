<div class="container">
  <h3 class="my-5">投稿詳細</h3>
  <div class="row">
    <div class="card w-75 mx-auto">
      <%= image_tag @post.get_image(800,600), class: "card-img-top" %>
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-4 text-center">
              <%= image_tag @post.cat.get_cat_image(200,200), class: "cat-img cat-img-post" %><br>
              <p class="text-center mt-2"><%= @post.cat.name %></p>
          </div>
          <div class="col-8">
            <p>タイトル</p>
            <p class="card-title pl-3">
              <%= @post.title %>
            </p>
            <p>内容</p>
            <p class="card-text pl-3 text-break">
              <%= @post.body %>
            </p>
            <p>タグ</p>
            <div class="ml-3">
              <%= render "admin/posts/tag_link", post: @post %>
            </div>
            <p class="mt-3"><%= @post.likes.count %>いいね</p>
            <span><%= @post.created_at.strftime('%Y/%m/%d') %></span>
            <div class="row justify-content-end">
              <%= link_to "削除する", admin_post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <h5 class="comment-count mt-5"><%= render "admin/comments/comment_count", post: @post %></h5>
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="comment-index">
        <%= render "admin/comments/index", post: @post %>
      </div>
    </div>
  </div>
</div>