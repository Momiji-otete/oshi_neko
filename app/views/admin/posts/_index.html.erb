<div class="row">
  <% posts.each do |post| %>
    <div class="card w-75 mx-auto mb-5 border-success">
      <%= link_to admin_post_path(post) do %>
        <%= image_tag post.get_image(800,600), class: "card-img-top" %>
      <% end %>
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-4 text-center">
            <%= image_tag post.cat.get_cat_image(200,200), class: "cat-img cat-img-post" %>
            <p class="text-center mt-2"><%= post.cat.name %></p>
          </div>
          <div class="col-6 offset-1">
            <p class="card-title">
              <%= link_to admin_post_path(post), class: "text-dark" do %>
                <strong><%= post.title %></strong>
              <% end %>
            </p>
            <p>
              <%= render "admin/posts/tag_link", post: post %>
            </p>
            <p><%= post.comments.count %>コメント</p>
            <span><%= post.created_at.strftime('%Y/%m/%d') %></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row justify-content-center">
  <%= paginate posts, theme: 'bootstrap-5' %>
</div>