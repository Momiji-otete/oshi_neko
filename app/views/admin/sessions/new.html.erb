<div class="container">
  <div class="row">
    <div class="col">
      <h3>管理者ログイン</h3>
      <%= render "layouts/errors", obj: @admin %>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="form-group">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td><%= f.label :email, "メールアドレス" %></td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :password, "パスワード" %></td>
                <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
              </tr>
              <tr>
                <td></td>
                <td colspan="2"><%= f.submit "ログイン", class: "btn btn-primary" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>